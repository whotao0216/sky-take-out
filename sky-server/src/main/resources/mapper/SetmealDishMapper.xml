<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <insert id="insertBatch">
        insert into sky_take_out.setmeal_dish (setmeal_id, dish_id, name, price, copies) VALUES
                           <foreach collection="setmealDishes" separator="," item="sd">
                                                        (#{sd.setmealId},#{sd.dishId},#{sd.name},#{sd.price},#{sd.copies})</foreach>
    </insert>
    <delete id="deleteBySetmealIds">
        delete from sky_take_out.setmeal_dish where setmeal_id in
                                              <foreach collection="setmealIds" item="setmealId" separator="," open="(" close=")">
                                                  #{setmealId}
                                              </foreach>
    </delete>

    <select id="getSetmealIdsByDishIds" resultType="java.lang.Long">
        select *from sky_take_out.category where id in
                    <foreach collection="dishIds" separator="," item="dishId" open="(" close=")">
                        #{dishId}
                    </foreach>
    </select>
    <select id="getDishesBySetmealId" resultType="com.sky.entity.SetmealDish" >
        select *from sky_take_out.setmeal_dish
        where setmeal_id=#{setmealId}
    </select>
</mapper>